

<section class="">
	
	<div class="container flex flex-wrap pt-4 pb-12">
	
		<h1 class="w-full my-2 text-5xl mt-32 font-bold leading-tight text-center text-gray-800">Appointments</h1>
		<div class="w-full mb-4">	
			<div class="h-1 mx-auto gradient w-64 opacity-25 my-0 py-0 rounded-t"></div>
		</div>

    <% @appointments.each do |appointment| %>

		<div class="w-1/3 max-w-1/3 md:w-1/3 p-6 mt-4 border">
			<div class=" bg-white">
					<p class="w-full text-gray-600 text-3xl text-center">Appointment</p>
          <p class="text-center">Date:</p>
					<p class="border-b text-center"><%= appointment.date %></p>
          <p class="text-center">Barber:</p>
          <p class="border-b text-center"><%= appointment.barber.name %></p>
          <p class="text-center">Customer:</p>
          <p class="border-b text-center"><%= current_user.name %></p>
        <hr>
			</div>
			<div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow p-6">
				<div class="flex items-center justify-center">
					<button class="mx-auto lg:mx-0 hover:underline bg-green-700 font-bold rounded-full my-6 py-4 px-8 shadow-lg"><%= link_to 'Show', appointment , :class => 'text-white hover:text-white' %></button>
          <button class="mx-auto lg:mx-0 hover:underline bg-yellow-500 font-bold rounded-full my-6 py-4 px-8 shadow-lg"><%= link_to 'Edit', edit_appointment_path(appointment), :class => 'text-white hover:text-white' %></button>
          <button class="mx-auto lg:mx-0 hover:underline bg-red-700 font-bold rounded-full my-6 py-4 px-8 shadow-lg"><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'text-white hover:text-white' %></button>
				</div>
			</div>
		</div>
  <% end %>
	</div>
  <div class="container flex justify-center">
  <button class="m-auto text-center lg:mx-0 hover:underline newApp font-bold rounded-full my-6 py-4 px-8 shadow-lg"><%= link_to 'New Appointment', new_appointment_path,:class => 'text-white' %></button>
  </div>
    
</section>



